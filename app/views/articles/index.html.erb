

  <div id="main-container" class="container-fluid">
<p id="notice"><%= notice %></p>

<h1>Liste de courses</h1>

<table class="table-hover table responsive-table"
  <thead>
    <tr>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.article.capitalize%></td>
        <td><%= link_to "", article, class: 'btn-sm btn-danger glyphicon glyphicon-trash',method: :delete%></td>
    <% end %>
      <tr>
        <%= form_for @article do |f|%>
        <td><%=f.text_field :article, :autofocus => true %></td>
        <td><%=button_tag "", type: 'submit', class: 'btn-sm btn-success glyphicon glyphicon-plus'%></td>
        <%end%>
      </tr>
  </tbody>
</table>
</div>


