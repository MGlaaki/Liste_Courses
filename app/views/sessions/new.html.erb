<div class="container-fluid">
    <h1 class="col-sm-offset-2"> Se connecter</h1>

    <%= form_tag log_in_path, {class: "form-horizontal"} do |f|  %>
        <div class="form-group">
            <label for="name" class="control-label col-sm-2">Name</label>
            <div class="col-sm-10">
            <input type="text" name="name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
          <label for="password" class="control-label col-sm-2">Password</label>
                <div class="col-sm-10">
            <input type="password" name="password" class="form-control" />
                </div>
        </div>

        <%= submit_tag "Sign in", :class =>"btn btn-default, col-sm-offset-2"  %>
            <% end %>
                <p id=alert, class="col-sm-offset-2">
                    <%=alert%>
                </p>
                <div class="col-sm-offset-2">
                    <%= link_to "Pas encore de compte? S'inscrire.", new_user_path %>
                </div>

</div>
